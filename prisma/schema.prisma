generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(cuid())
  fullName         String?
  phone            String?   @unique
  email            String?   @unique
  password         String?
  role             String    @default("USER")
  refreshTokens    String?
  isVerified         Boolean   @default(false)
  verificationCode   String?
  passwordResetCode  String?
  passwordResetExpiry DateTime?
  onboardingCompleted Boolean   @default(false)
  subscriptionTier   String    @default("FREE") // FREE, PREMIUM, ENTERPRISE
  weddings           Wedding[]
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  sessions           Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Wedding {
  id                String      @id @default(cuid())
  userId            String
  groomName         String
  brideName         String
  weddingDate       DateTime
  weddingLocation   String
  invitationStyle   String      @default("classic")
  language          String      @default("UZ")
  slug              String      @unique
  qrCodeUrl         String?
  user              User        @relation(fields: [userId], references: [id])
  invitations       Invitation[]
  gifts             Gift[]
  media             Media[]
  rsvps             RSVP[]
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model RSVP {
  id            String   @id @default(cuid())
  weddingId     String
  guestName     String
  guestPhone    String?
  guestEmail    String?
  status        String   // ATTENDING, NOT_ATTENDING, MAYBE
  attendeeCount Int      @default(1)
  message       String?
  wedding       Wedding  @relation(fields: [weddingId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Invitation {
  id           String   @id @default(cuid())
  weddingId    String?
  content      String
  meta         String?  // JSON storage of structured AI response
  language     String
  aiGenerated  Boolean  @default(true)
  status       String   @default("DRAFT") // DRAFT, PUBLISHED
  wedding      Wedding? @relation(fields: [weddingId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Gift {
  id          String   @id @default(cuid())
  weddingId   String
  guestName   String
  amount      Float
  message     String?
  wedding     Wedding  @relation(fields: [weddingId], references: [id])
  createdAt   DateTime @default(now())
}

model Media {
  id               String   @id @default(cuid())
  weddingId        String
  fileUrl          String
  type             String
  uploadedByGuest  Boolean  @default(true)
  wedding          Wedding  @relation(fields: [weddingId], references: [id])
  createdAt        DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   // RSVP, GIFT, MEDIA, SYSTEM
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  weddingId   String?
  activityType String  // RSVP_SUBMITTED, GIFT_RECEIVED, MEDIA_UPLOADED, INVITATION_CREATED
  description String
  metadata    String?  // JSON for additional data
  createdAt   DateTime @default(now())
}

model Table {
  id        String       @id @default(cuid())
  weddingId String
  name      String
  capacity  Int
  guests    TableGuest[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model TableGuest {
  id         String   @id @default(cuid())
  tableId    String
  guestName  String
  guestPhone String?
  guestEmail String?
  table      Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model Guest {
  id           String   @id @default(cuid())
  weddingId    String
  name         String
  phone        String?
  email        String?
  linkToken    String   @unique
  invitationId String?
  hasViewed    Boolean  @default(false)
  viewedAt     DateTime?
  createdAt    DateTime @default(now())
}
