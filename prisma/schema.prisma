generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String       @id @default(cuid())
  fullName            String
  email               String       @unique
  phone               String?
  password            String?
  role                String       @default("USER")
  emailVerified       DateTime?
  provider            String       @default("credentials")
  verificationCode    String?
  verificationExpiry  DateTime?
  passwordResetCode   String?
  passwordResetExpiry DateTime?
  onboardingCompleted Boolean      @default(false)
  subscriptionTier    String       @default("FREE")
  refreshTokens       String?
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  weddings            Wedding[]
  notifications       Notification[]
  activityLogs        ActivityLog[]
  sessions            Session[]
  accounts            Account[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Wedding {
  id           String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  groomName    String?
  brideName    String?
  weddingDate  DateTime?
  location     String?
  slug         String?       @unique
  rsvps        RSVP[]
  invitations  Invitation[]
  gifts        Gift[]
  media        Media[]
  guestActions GuestAction[]
  tables       Table[]
  activityLogs ActivityLog[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model RSVP {
  id            String   @id @default(cuid())
  weddingId     String
  wedding       Wedding  @relation(fields: [weddingId], references: [id], onDelete: Cascade)
  guestName     String
  guestPhone    String?
  guestEmail    String?
  status        String   @default("PENDING")
  attendeeCount Int      @default(1)
  message       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Invitation {
  id        String   @id @default(cuid())
  weddingId String?
  wedding   Wedding? @relation(fields: [weddingId], references: [id])
  content   String?
  template  String?
  status    String   @default("DRAFT")
  meta      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Gift {
  id            String   @id @default(cuid())
  weddingId     String
  wedding       Wedding  @relation(fields: [weddingId], references: [id])
  guestName     String
  amount        Float
  message       String?
  paymentMethod String   @default("MANUAL") // MANUAL, CLICK, PAYME
  status        String   @default("PENDING") // PENDING, COMPLETED
  createdAt     DateTime @default(now())
}

model Media {
  id              String   @id @default(cuid())
  weddingId       String
  wedding         Wedding  @relation(fields: [weddingId], references: [id])
  fileUrl         String
  type            String   // IMAGE, VIDEO
  uploadedByGuest Boolean  @default(true)
  guestName       String?
  caption         String?
  createdAt       DateTime @default(now())
}

model GuestAction {
  id        String   @id @default(cuid())
  weddingId String
  wedding   Wedding  @relation(fields: [weddingId], references: [id])
  actionType String   // VISIT, SHARE, CLICK_MAP
  metadata  Json?
  ipAddress String?
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ActivityLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  weddingId    String?
  wedding      Wedding? @relation(fields: [weddingId], references: [id])
  activityType String
  description  String
  metadata     Json?
  createdAt    DateTime @default(now())
}

model Table {
  id        String       @id @default(cuid())
  weddingId String
  wedding   Wedding      @relation(fields: [weddingId], references: [id])
  name      String
  capacity  Int
  guests    TableGuest[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model TableGuest {
  id         String   @id @default(cuid())
  tableId    String
  table      Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  guestName  String
  guestPhone String?
  guestEmail String?
  createdAt  DateTime @default(now())
}
