generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth uchun to'liq modellar
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?    // Optional for OTP auth or legacy users
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  invitations   Invitation[]
  weddings      Wedding[]
  notifications Notification[]
  activityLogs  ActivityLog[]
  
  // Custom fields
  role                String       @default("USER")
  phone               String?
  onboardingCompleted Boolean      @default(false)
  subscriptionTier    String       @default("FREE")
}

model EmailVerification {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}


model Wedding {
  id           String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  groomName    String?
  brideName    String?
  weddingDate  DateTime?
  location     String?
  slug         String?       @unique
  rsvps        RSVP[]
  invitations  Invitation[]
  gifts        Gift[]
  media        Media[]
  guestActions GuestAction[]
  tables       Table[]
  activityLogs ActivityLog[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model RSVP {
  id            String   @id @default(cuid())
  weddingId     String
  wedding       Wedding  @relation(fields: [weddingId], references: [id], onDelete: Cascade)
  guestName     String
  guestPhone    String?
  guestEmail    String?
  status        String   @default("PENDING")
  attendeeCount Int      @default(1)
  message       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Business logic modellar (mavjud bo'lsa saqlang)
model Invitation {
  id          String   @id @default(cuid())
  userId      String
  brideName   String?
  groomName   String?
  eventDate   DateTime?
  location    String?
  qrCode      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Existing fields
  weddingId   String?
  wedding     Wedding? @relation(fields: [weddingId], references: [id])
  content     String?
  template    String?
  status      String   @default("DRAFT")
  meta        Json?

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  guests      Guest[]
}

model Guest {
  id           String   @id @default(cuid())
  invitationId String
  name         String
  phone        String?
  confirmed    Boolean  @default(false)
  
  invitation   Invitation @relation(fields: [invitationId], references: [id], onDelete: Cascade)
}

model Gift {
  id            String   @id @default(cuid())
  weddingId     String
  wedding       Wedding  @relation(fields: [weddingId], references: [id])
  guestName     String
  amount        Float
  message       String?
  paymentMethod String   @default("MANUAL") // MANUAL, CLICK, PAYME
  status        String   @default("PENDING") // PENDING, COMPLETED
  createdAt     DateTime @default(now())
}

model Media {
  id              String   @id @default(cuid())
  weddingId       String
  wedding         Wedding  @relation(fields: [weddingId], references: [id])
  fileUrl         String
  type            String   // IMAGE, VIDEO
  uploadedByGuest Boolean  @default(true)
  guestName       String?
  caption         String?
  createdAt       DateTime @default(now())
}

model GuestAction {
  id        String   @id @default(cuid())
  weddingId String
  wedding   Wedding  @relation(fields: [weddingId], references: [id])
  actionType String   // VISIT, SHARE, CLICK_MAP
  metadata  Json?
  ipAddress String?
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ActivityLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  weddingId    String?
  wedding      Wedding? @relation(fields: [weddingId], references: [id])
  activityType String
  description  String
  metadata     Json?
  createdAt    DateTime @default(now())
}

model Table {
  id        String       @id @default(cuid())
  weddingId String
  wedding   Wedding      @relation(fields: [weddingId], references: [id])
  name      String
  capacity  Int
  guests    TableGuest[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model TableGuest {
  id         String   @id @default(cuid())
  tableId    String
  table      Table    @relation(fields: [tableId], references: [id], onDelete: Cascade)
  guestName  String
  guestPhone String?
  guestEmail String?
  createdAt  DateTime @default(now())
}
